{
  "name": "koa-boilerplate",
  "version": "1.0.0",
  "description": "Group all Koa releated best practices in this project",
  "author": "Edward YU <edwardkcyu@gmail.com>",
  "license": "UNLICENSED",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "debug": "node --nolazy --inspect-brk=9229 src/index.js",
    "debug:jest": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "lint": "eslint src",
    "docker:build": "docker build -t edwardkcyu/koa-boilerplate:1.0.0 .",
    "docker:push": "docker push aedwardkcyu/koa-boilerplate:1.0.0",
    "test": "jest",
    "test:postman": "newman run test/postman/koa-boilerplate.postman_collection.json -e test/postman/env/local.json"
   },
  "dependencies": {
    "axios": "^0.18.0",
    "dotenv": "^5.0.1",
    "http-shutdown": "^1.2.0",
    "kcors": "^2.2.1",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.0",
    "koa-helmet": "^4.0.0",
    "koa-logger": "^3.2.0",
    "koa-response-time": "^2.0.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.1",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "husky": "^1.2.0",
    "jest": "^23.4.1",
    "lint-staged": "^8.1.0",
    "newman": "^4.2.2",
    "nodemon": "^1.17.3",
    "prettier": "^1.12.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md}": ["prettier --write", "git add"],
    "src/**/*.js": ["eslint --fix", "git add"]
  }
}
